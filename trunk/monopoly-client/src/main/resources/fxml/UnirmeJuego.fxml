                        </TableView>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" minHeight="100.0">
                     <children>
                        <GridPane alignment="CENTER" minWidth="500.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Button id="btnCancelar" fx:id="btnCancelar" mnemonicParsing="false" onAction="#processCancel" prefHeight="51.0" prefWidth="200.0" text="Cancelar" />
                              <Button id="btnCrearJuego" fx:id="btnCrearJuego" contentDisplay="CENTER" mnemonicParsing="false" onAction="#processCreateGame" prefHeight="51.0" prefWidth="200.0" text="Crear Juego" GridPane.columnIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
