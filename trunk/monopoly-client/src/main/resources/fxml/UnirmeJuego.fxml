                        <TextField id="txtFechaHasta" fx:id="txtFechaHasta" promptText="dd/mm/aaaa" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label alignment="CENTER_RIGHT" text="Fecha Desde" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField id="txtFechaDesde" fx:id="txtFechaDesde" promptText="dd/mm/aaaa" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </GridPane>
                  <HBox alignment="CENTER">
                     <children>
                        <TableView id="tblJuegos" fx:id="tblJuegos" maxHeight="200.0" minHeight="200.0" minWidth="600.0">
                           <columns>
                              <TableColumn id="collumnNombre" fx:id="colNombre" maxWidth="300.0" minWidth="50.0" prefWidth="175.0" text="Nombre" />
                              <TableColumn id="collumnCreador" fx:id="colCreador" maxWidth="300.0" minWidth="50.0" prefWidth="175.0" text="Creador" />
                              <TableColumn id="collumnFecha" fx:id="colFecha" maxWidth="300.0" minWidth="50.0" prefWidth="120.0" text="Fecha" />
                              <TableColumn id="collumnParticipantes" fx:id="colParticipantes" maxWidth="300.0" minWidth="50.0" prefWidth="175.0" text="Participantes" />
                           </columns>
                        </TableView>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" minHeight="80.0" spacing="20.0">
                     <children>
                        <Button id="btnCancelar" fx:id="btnCancelar" mnemonicParsing="false" onAction="#processCancel" prefHeight="51.0" prefWidth="200.0" text="Cancelar" />
                        <Button id="btnCrearJuego" fx:id="btnCrearJuego" contentDisplay="CENTER" mnemonicParsing="false" onAction="#processCreateGame" prefHeight="51.0" text="Unirme a Juego" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
